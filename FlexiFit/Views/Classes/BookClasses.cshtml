@model FlexiFit.Entities.Models.Booking

@{
    ViewData["Title"] = "Book a Class";
}

@{
    int? memberId = Context.Session.GetInt32("MemberId");
}

<h2>Book a Class</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="BookClasses" method="post">
    <input type="hidden" name="MemberId" value="@Context.Session.GetInt32("MemberId")" />
    <div class="form-group">
        <label asp-for="ClassId">Class</label>
        <select asp-for="ClassId" class="form-control">
            @foreach (var cls in ViewBag.Classes)
            {
                <option value="@cls.ClassId">@cls.ClassName</option>
            }
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate">Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingTime">Time</label>
        <input asp-for="BookingTime" class="form-control" type="time" />
        <span asp-validation-for="BookingTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Book Class</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
