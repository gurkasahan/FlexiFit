@model IEnumerable<FlexiFit.Entities.Models.Class>

@{
    ViewData["Title"] = "Book Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Classes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cls in Model)
        {
            <tr>
                <td>@cls.ClassName</td>
                <td>
                    <a asp-controller="Bookings" asp-action="Create" class="btn">Book Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
