@model FlexiFit.Entities.Models.Workout

@{
    ViewData["Title"] = "Workout Details";
}

<h2>@Model.ExerciseName</h2>

<div class="workout-detail">
    <p><strong>Muscle Group:</strong> @Model.MuscleGroup</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Repetitions:</strong> @Model.Repetitions</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Url.Content(@Model.ImageUrl)" alt="@Model.ExerciseName" class="img-fluid" />
    }
</div>
