<div class="find-exercise-page">
    <div class="find-exercise-container">
        <h1 class="find-exercise-title">Find an Exercise</h1>
        <div class="exercise-grid">
            @foreach (var muscleGroup in Model)
            {
                <div class="muscle-card">
                    <div class="muscle-icon">
                        @if (muscleGroup == "Chest")
                        {
                            <i class="fas fa-dumbbell"></i>
                        }
                        else if (muscleGroup == "Triceps")
                        {
                            <i class="fas fa-hand-rock"></i>
                        }
                        else if (muscleGroup == "Biceps")
                        {
                            <i class="fas fa-arm-flex"></i> <!-- Replace image with icon -->
                        }
                        else if (muscleGroup == "Back")
                        {
                            <i class="fas fa-anchor"></i>
                        }
                        else if (muscleGroup == "Legs")
                        {
                            <i class="fas fa-running"></i>
                        }
                        else if (muscleGroup == "Abs")
                        {
                            <i class="fas fa-apple-alt"></i>
                        }
                    </div>
                    <h3 class="muscle-name">@muscleGroup</h3>
                    <a asp-action="WorkoutDetails" asp-route-muscleGroup="@muscleGroup" class="btn-muscle">View Workouts</a>
                </div>
            }
        </div>
    </div>
</div>
