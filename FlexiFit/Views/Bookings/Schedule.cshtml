@model IEnumerable<FlexiFit.Entities.Models.Booking>

@{
    ViewData["Title"] = "Your Class Schedule";
}

<h2>Your Class Schedule</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Class.ClassName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.BookingTime.ToString(@"hh\:mm")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
