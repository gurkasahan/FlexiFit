@model FlexiFit.Entities.Models.Booking

@{
    ViewData["Title"] = "Cancel Booking";
}

<h2>Cancel Booking</h2>

<div>
    <p>Are you sure you want to cancel the following booking?</p>
    <p><strong>Class:</strong> @Model.Class.ClassName</p>
    <p><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
    <p><strong>Time:</strong> @Model.BookingTime.ToString(@"hh\:mm")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Cancel Booking</button>
    <a asp-action="Schedule" asp-route-memberId="@Model.MemberId" class="btn btn-secondary">Back to Schedule</a>
</form>
