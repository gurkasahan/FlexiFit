@model FlexiFit.Entities.Models.Member

@{
    ViewData["Title"] = "Member Information";
}

<div class="page-background">
    <div class="card-container">
        <h1 class="card-title">Member Information</h1>
        <div class="card-detail">
            <p><span>First Name:</span> @Model.FirstName</p>
            <p><span>Last Name:</span> @Model.LastName</p>
            <p><span>Email:</span> @Model.Email</p>
            <p><span>Phone Number:</span> @Model.PhoneNumber</p>
            <p><span>Membership Tier:</span> @Model.MembershipTier</p>
            <p><span>Address:</span> @Model.Address</p>
            <p><span>Billing Name:</span> @Model.BillingName</p>
            <p><span>Card Number:</span> @Model.CardNumber</p>
            <p><span>Status:</span> @(Model.IsActive ? "Active" : "Inactive")</p>
        </div>
        <a asp-action="ManageMembership" asp-route-id="@Model.MemberId" class="card-button">Manage Membership</a>
    </div>
</div>

